# Settings
set zoom-step 5
set scroll-full-overlap 0.1
set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard

# Colorscheme
set default-bg "#3c3836"
set default-fg "#ebdbb2"
set highlight-color "#458588"
set highlight-active-color "#83a598"
set statusbar-bg "#1d2021"
set statusbar-fg "#ebdbb2"
set recolor true
set recolor-lightcolor "#1d2021"
set recolor-darkcolor  "#ebdbb2"
set recolor-keephue true
set window-title-basename true

# Keybinds
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top
map f follow
